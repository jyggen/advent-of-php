{
    "name": "boo/advent-of-php",
    "description": "My solutions to Advent of Code in PHP",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Jonas Stendahl",
            "email": "jonas@stendahl.me"
        }
    ],
    "require": {
        "drupol/phpermutations": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.0",
        "jakub-onderka/php-console-color": "^0.1",
        "symfony/finder": "^3.0 || ^4.0",
        "symfony/process": "^3.0 || ^4.0",
        "symfony/var-dumper": "^3.0 || ^4.0"
    },
    "autoload": {
        "files": [
            "functions.php"
        ]
    },
    "scripts": {
        "fix": "php-cs-fixer fix --verbose --diff --diff-format=udiff",
        "test": "php ./test.php"
    }
}
